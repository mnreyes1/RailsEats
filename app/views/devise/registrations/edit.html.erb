<% if resource_name.to_s == 'user' %>
<h2>Editar usuario <%= resource_name.to_s.humanize %></h2>
<% elsif resource_name.to_s == 'restaurante' %>
<h2>Editar restaurante <%= resource_name.to_s.humanize %></h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :correo %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autocomplete: "nombre" %>
  </div>

  <div class="field">
    <%= f.label :direccion %><br />
    <%= f.text_field :direccion, autocomplete: "direccion" %>
  </div>

  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.file_field :photo %>
  </div>

  <% if resource_name.to_s == "restaurante" %>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono, autocomplete: "telefono" %>
  </div>
  <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :contraseña %> <i>(dejar en blanco si no desea cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :contraseña_actual %> <i>(necesitamos tu contraseña actual para realizar cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar cambios" %>
  </div>
<% end %>

<br>
<br>
<br>
<h3>¿Insatisfecho?</h3>

<%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %>
<br>
<br>
<br>

<%= link_to "<button class='normalbtn'>Volver</button>".html_safe, 'javascript:history.go(-1);' %>

