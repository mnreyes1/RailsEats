<% if resource_name.to_s == "user" %>
<h2>Registrarse</h2>
<% else %>
<h2>Solicitar Creacion Restaurante</h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autocomplete: "nombre" %>
  </div>

  <div class="field">
    <%= f.label :direccion %><br />
    <%= f.text_field :direccion, autocomplete: "direccion" %>
  </div>

  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.file_field :photo, autocomplete: "foto" %>
  </div>

  <% if resource_name.to_s == "restaurante" %>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono, autocomplete: "telefono" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :correo %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :contraseÃ±a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contraseÃ±a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <% if resource_name.to_s == "restaurante" %>
  <div class="actions">
    <%= f.submit "Solicitar Restaurante" %>
  </div>
  <% else %>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
  <% end %>
<% end %>

