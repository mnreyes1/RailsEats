<h1>Usuarios</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Direccion</th>
      <th>Imagen</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.email %></td>
        <td><%= user.direccion %></td>
        <td>
        <% if user.photo.attached? %>
          <image src="<%= (url_for(user.photo))%>", height="70", width="70"></image>
        <% end %>
        </td>
        <td><%= link_to "<button class='btn btn-primary'>Ver</button>".html_safe, user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>Volver</button>".html_safe, 'javascript:history.go(-1);' %>
