<h1>Comentarios</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Contenido</th>
      <th>Puntaje</th>
      <th>User</th>
      <th>Restaurante</th>
      <th>Plato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.fecha %></td>
        <td><%= comentario.hora %></td>
        <td><%= comentario.contenido %></td>
        <td><%= comentario.puntaje %></td>
        <td><%= comentario.user.nombre %></td>
        <td>
        <% if comentario.restaurante %>
        <%= comentario.restaurante.nombre %>
        <% end %>
        </td>
        <td>
        <% if comentario.plato %>
        <%= comentario.plato.nombre %>
        <% end %>
        </td>
        <td><%= link_to "<button class='btn btn-primary'>Ver</button>".html_safe, comentario %></td>
        <td><%= link_to "<button class='btn btn-danger'>Eliminar</button>".html_safe, comentario, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>Volver</button>".html_safe, 'javascript:history.go(-1);' %>