<h1>Solicutudes Restaurantes</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Direccion</th>
      <th>Valoracion</th>
      <th>Imagen</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each do |restaurante| %>
    <% if restaurante.status == "pendiente" %>
      <tr>
        <td><%= restaurante.nombre %></td>
        <td><%= restaurante.email %></td>
        <td><%= restaurante.direccion %></td>
        <td><%= restaurante.valoracion %></td>
        <td><%= restaurante.imagen %></td>
        <td><%= restaurante.telefono %></td>
        <td><%= link_to "<button class='btn btn-success'>Aprobar</button>".html_safe, aprobar_path(restaurante), method: :post %></td>
        <td><%= link_to "<button class='btn btn-danger'>Eliminar</button>".html_safe, restaurante, method: :delete, data: { confirm: 'Estas seguro?' }  %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>Volver</button>".html_safe,'javascript:history.go(-1);' %>
