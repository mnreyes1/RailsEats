<h1>Platos</h1>

<% if current_restaurante.plato.first %>
<h1>Mis Platos</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>N personas</th>
      <th>Imagen</th>
      <th>Valoracion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_restaurante.plato.each do |plato| %>
    <% if plato.id > 0 %>
      <tr>
        <td><%= plato.nombre %></td>
        <td><%= plato.precio %></td>
        <td><%= plato.descripcion %></td>
        <td><%= plato.n_personas %></td><td>
        <% if plato.photo.attached? %>
          <image src="<%= (url_for(plato.photo))%>", height="70", width="70"></image>
        <% end %>
        </td>
        <td><%= plato.valoracion %></td>
        <td><%= link_to "<button class='btn btn-primary'>Ver</button>".html_safe, plato %></td>
        <td><%= link_to "<button class='btn btn-warning'>Editar</button>".html_safe, edit_plato_path(plato) %></td>
        <td><%= link_to "<button class='btn btn-danger'>Eliminar</button>".html_safe, plato, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
  <% else %>
  <br>
    <strong>Aun no tienes platos agregados</strong><br>
  <br>
  <br>
<% end %>


<%= link_to "<button class='btn btn-success'>Crear Nuevo Plato</button>".html_safe, new_plato_path %>
