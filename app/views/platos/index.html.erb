<h1>Platos</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>N personas</th>
      <th>Imagen</th>
      <th>Valoracion</th>
      <th>Restaurante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platos.each do |plato| %>
    <% if plato.id > 0 %>
      <tr>
        <td><%= plato.nombre %></td>
        <td><%= plato.precio %></td>
        <td><%= plato.descripcion %></td>
        <td><%= plato.n_personas %></td><td>
        <% if plato.photo.attached? %>
          <image src="<%= (url_for(plato.photo))%>", height="70", width="70"></image>
        <% end %>
        </td>
        <td><%= plato.valoracion %></td>
        <td><%= plato.restaurante.nombre %></td>
        <td><%= link_to "<button class='btn btn-primary'>Ver</button>".html_safe, plato %></td>
        <td><%= link_to "<button class='btn btn-danger'>Eliminar</button>".html_safe, plato, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<button class='btn btn-primary'>Volver</button>".html_safe, 'javascript:history.go(-1);' %>
